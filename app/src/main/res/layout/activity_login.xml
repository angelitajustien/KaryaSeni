<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="144dp"
        android:layout_height="131dp"
        android:background="@drawable/logo"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginBottom="20dp"

        android:text="Login"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textStyle="italic"
        android:textSize="50dp"></TextView>

    <TextView
        android:id="@+id/vMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:text="Email"
        android:textColor="@android:color/background_dark"
        android:textSize="25dp">

    </TextView>
    <EditText
        android:id="@+id/tMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vMail">

    </EditText>

    <TextView
        android:id="@+id/vPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="25dp"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/tMail">

    </TextView>

    <EditText
        android:id="@+id/tPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/vPass">

    </EditText>

    <Button
        android:id="@+id/btn_enter"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tPass"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:text="Sign In"
        android:textSize="30dp"
        android:textColor="#000000">
    </Button>

    <TextView
        android:id="@+id/tvForgotPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_enter"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Forgot Password"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20dp"></TextView>

    <ImageView
        android:id="@+id/google"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_below="@+id/tv2"
        android:layout_marginHorizontal="160dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/google" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvForgotPass"
        android:layout_marginTop="-2dp"
        android:gravity="center"
        android:text="-------- OR --------"
        android:textSize="30dp"></TextView>

    <ImageView
        android:id="@+id/fb"
        android:layout_width="49dp"
        android:layout_height="48dp"
        android:layout_alignTop="@+id/tv2"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/fb" />

    <TextView
        android:id="@+id/tvSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/fb"
        android:layout_marginTop="27dp"
        android:gravity="center"
        android:text="Buat Akun"
        android:textColor="@android:color/background_dark"
        android:textSize="15dp"></TextView>
</RelativeLayout>